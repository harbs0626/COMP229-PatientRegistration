@model Patient

@{
    Layout = "_Layout";
}

<div class="row" style="margin-top:20px">
    <div class="col-md-4" style="text-align:right">
        <img src="~/images/hospital.png" alt="" style="width:10%" />
    </div>
    <div class="col-md-4" style="text-align:left">
        <h3>Patient Registration System</h3>
    </div>
</div>

<div class="row" style="margin-top:20px">
    <div class="col-md-2">&nbsp;</div>
    <div class="col-md-8">
        <h5>@ViewBag.Title</h5>
        <hr />
        <form asp-action="Register" method="post">
            <table class="table table-borderless">
                <tr>
                    <td>Patient Name</td>
                    <td><input class="form-control" asp-for="PatientName" type="text"/></td>
                </tr>
                <tr>
                    <td>Age</td>
                    <td><input class="form-control" asp-for="Age" type="number" /></td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td><input class="form-control" asp-for="Address" type="text" /></td>
                </tr>
                <tr>
                    <td>Occupation</td>
                    <td><input class="form-control" asp-for="Occupation" type="text" /></td>
                </tr>
                <tr>
                    <td>Has Insurance?</td>
                    <td><input class="form-check" asp-for="HasInsurance" type="checkbox" /></td>
                </tr>
                <tr>
                    <td style="width:230px">Had Previous Operation?</td>
                    <td><input class="form-check" asp-for="HadPreviousOperation" type="checkbox" /></td>
                </tr>
                <tr>
                    <td>Marital Status</td>
                    <td>
                        <select class="form-control dropdown" asp-for="MaritalStatus">
                            <option>Married</option>
                            <option>Single</option>
                            <option>Divorced</option>
                            <option>Widowed</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <input type="submit" class="btn btn-outline-primary" name="Save" style="width:100%" />
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Index" class="btn btn-outline-secondary" style="width:100%">Cancel</a>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div class="col-md-2">&nbsp;</div>
</div>

